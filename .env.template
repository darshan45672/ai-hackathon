# =============================================================================
# AI HACKATHON - ENVIRONMENT TEMPLATE
# =============================================================================
# This file contains environment template variables
# - Copy this to .env.development for development
# - Copy this to .env.production for production
# - Use .env.local for personal overrides (gitignored)
# - Copy sensitive values and replace placeholder values
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
API_PREFIX=api
NEXT_PUBLIC_API_URL=http://localhost

# =============================================================================
# DATABASE CONFIGURATION (Choose ONE approach)
# =============================================================================
# Option 1: Use containerized PostgreSQL (Recommended for development)
DATABASE_URL="postgresql://postgres:password@postgres:5432/ai_hackathon?schema=public"

# Option 2: Use your external database for development (if you prefer cloud)
# DATABASE_URL="postgresql://username:password@hostname:port/database?schema=public&sslmode=require&channel_binding=require"

# =============================================================================
# POSTGRESQL CONFIGURATION (for containerized DB)
# =============================================================================
POSTGRES_DB=ai_hackathon
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration - Simple for development, secure for production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_EXPIRATION=7d

# Session Security - Simple for development, secure for production
SESSION_SECRET=your-session-secret-change-in-production

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
# GitHub OAuth - Create at: https://github.com/settings/applications/new
# Callback URL: http://localhost/api/auth/github/callback (development)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth - Create at: https://console.cloud.google.com/
# Callback URL: http://localhost/api/auth/google/callback (development)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Gemini API - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Development URLs
FRONTEND_URL=http://localhost

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Grafana Configuration - Simple for development
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_SECRET_KEY=your-grafana-secret

# Prometheus Configuration
PROMETHEUS_RETENTION=7d

# =============================================================================
# SSL/TLS CONFIGURATION (Not needed for development)
# =============================================================================
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CHAIN_PATH=

# =============================================================================
# RATE LIMITING & SECURITY (Relaxed for development)
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15
CORS_ORIGIN=http://localhost:3000,http://localhost:3004
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# EMAIL CONFIGURATION (Optional - use fake SMTP for development)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=AI Hackathon <noreply@localhost>

# =============================================================================
# BACKUP & STORAGE (Optional for development)
# =============================================================================
# Use local storage or development AWS account
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-hackathon-uploads

# =============================================================================
# MONITORING & ALERTING (Disabled for development)
# =============================================================================
# Use webhook.site or disable for development
ALERT_WEBHOOK_URL=https://webhook.site/your-test-uuid
ERROR_REPORTING_URL=

# =============================================================================
# CONTAINER ORCHESTRATION
# =============================================================================
# Docker/Podman specific
COMPOSE_PROJECT_NAME=ai_hackathon_dev
RESTART_POLICY=unless-stopped

# Resource Limits (Lower for development)
BACKEND_MEMORY_LIMIT=512m
BACKEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_LIMIT=256m
FRONTEND_CPU_LIMIT=0.25
DATABASE_MEMORY_LIMIT=512m
DATABASE_CPU_LIMIT=0.5

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
# Hot reload and development features
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
ENABLE_API_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Development database seeding
SEED_DATABASE=false
RESET_DATABASE_ON_START=false

# Development ports (if different from production)
DEV_FRONTEND_PORT=3004
DEV_BACKEND_PORT=3001
DEV_AI_SERVICE_PORT=3002

BACKEND_URL=http://localhost
